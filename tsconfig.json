{
	"compilerOptions": {
		"target": "esnext",
		"module": "CommonJS",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"removeComments": false,
		"sourceMap": true,
		"lib": ["ES2018", "DOM"],
		"outDir": "build",
		"declaration": true,

		"jsx": "react",

		"forceConsistentCasingInFileNames": true,

		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
